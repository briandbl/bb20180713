<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/activity_led"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tool:context="com.performance.ubt.sdkTest.ui.LedFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Colors"
            android:textColor="@color/red"
            android:textSize="24dp"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/select_color"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/getLedList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="getLedList"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnEye"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnEye"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOffEye"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOffEye"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnEyeBlink"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnEyeBlink"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnEyeFlash"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnEyeFlash"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnEyeMarquee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnEyeMarquee"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnHead"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnHead"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOffHead"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOffHead"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnHeadFlash"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnHeadFlash"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnHeadMarquee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnHeadMarquee"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnHeadBreath"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnHeadBreath"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnMouth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnMouth"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOffMouth"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOffMouth"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/turnOnMouthBreath"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="turnOnMouthBreath"
        android:textAllCaps="false" />

</LinearLayout>